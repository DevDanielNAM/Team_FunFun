<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/main_top_round"
            android:paddingTop="25dp"
            android:text="Fun Fun Todo"
            android:fontFamily="@font/dohyeon_regular"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold" />

        <CalendarView
            android:id="@+id/mainCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-90dp"
            android:background="@drawable/calendar_round" />

        <View
            android:id="@+id/divider"
            android:layout_width="380dp"
            android:layout_height="1dp"
            android:layout_marginVertical="15dp"
            android:layout_gravity="center"
            android:background="@color/black" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/mainAddTodo"
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/add_button_round"
            android:fontFamily="@font/ibm_plex_sans_kr_medium"
            android:textAllCaps="false"
            android:text="+ Todo 추가"
            android:textColor="@color/white"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/todayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:fontFamily="@font/dohyeon_regular"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/todoContainer"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="100dp"
            android:layout_gravity="center" />

    </LinearLayout>


</FrameLayout>